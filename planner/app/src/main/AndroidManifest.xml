<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunilson.firenote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.sunilson.firenote.presentation.application.BaseApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sunilson.firenote.presentation.homepage.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.shortcuts" android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name="com.sunilson.firenote.presentation.authentication.LoginActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:parentActivityName="com.sunilson.firenote.activities.StartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sunilson.firenote.presentation.authentication.RegisterActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:parentActivityName="com.sunilson.firenote.presentation.authentication.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.sunilson.firenote.presentation.elements.checklist.ChecklistActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.sunilson.firenote.presentation.homepage.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.sunilson.firenote.presentation.elements.note.NoteActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.sunilson.firenote.presentation.homepage.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateUnchanged|stateAlwaysHidden" />
        <activity
            android:name="com.sunilson.firenote.presentation.bin.BinActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.sunilson.firenote.presentation.settings.SettingsActivity"
            android:label="@string/app_name"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name="com.sunilson.firenote.presentation.elements.bundle.BundleActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.sunilson.firenote.activities.StartActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.sunilson.firenote.presentation.authentication.ResetPasswordActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:parentActivityName="com.sunilson.firenote.presentation.authentication.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
         See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/fire" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

    </application>

</manifest>
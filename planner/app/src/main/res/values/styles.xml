<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:windowBackground">@color/main_background_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme.NoActionBar">
        <item name="homeAsUpIndicator">@drawable/back_button_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.AppBarOverlayMain" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>

    <style name="OverflowStyle" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/main_menu_more_icon</item>
    </style>

    <style name="AppTheme.AppBarOverlayElements" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/tint_white</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="element_List_element">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="element_List_TextView" parent="element_List_element">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="element_CheckList_TextView" parent="element_List_element">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_title_textview">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="dialog">
        <item name="android:windowAnimationStyle">@style/dialogAnimation</item>
    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="settingsLinearMasterLayout">
        <item name="android:background">@color/tint_white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingsElementsHolder">
        <item name="android:paddingLeft">@dimen/settings_element_padding_vertical</item>
        <item name="android:paddingRight">@dimen/settings_element_padding_vertical</item>
        <item name="android:paddingTop">@dimen/settings_element_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/settings_element_padding_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingsDivider">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/main_background_color</item>
    </style>

    <style name="settingsTextview">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="settingsTextviewSubtitle" parent="settingsTextview">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_crossed_out</item>
    </style>

    <style name="dialog_spinner">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#dadada</item>
    </style>

    <style name="dialog_edittext">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="colorControlNormal">#dadada</item>
        <item name="colorControlActivated">#dadada</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="loginEditText">
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/title_text_color</item>
        <item name="colorControlActivated">@color/title_text_color</item>
    </style>

    <style name="loginEditTextLand">
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/title_text_color</item>
        <item name="colorControlActivated">@color/title_text_color</item>
    </style>
    
    <style name="ShowCaseViewStyle" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/note_color_6</item>
        <item name="sv_buttonText">Okay</item>
        <item name="sv_titleTextAppearance">@style/ShowCaseTitleStyle</item>
        <item name="sv_detailTextAppearance">@style/ShowCaseTextStyle</item>
    </style>

    <style name="ShowCaseTitleStyle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tint_white</item>
    </style>

    <style name="ShowCaseTextStyle" parent="ShowCaseTextStyle">
        <item name="android:textColor">@color/white_text_color_sub</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/tint_white</item>
    </style>

    <style name="widget_add_button">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/note_color_1</item>
        <item name="android:tint">@color/white_text_color</item>
    </style>
</resources>

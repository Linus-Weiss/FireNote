        android:shortcutDisabledMessage="@string/note_disabled_message1"
        android:shortcutId="createNote"
        android:shortcutLongLabel="@string/note_shortcut_long_label1"
        android:shortcutShortLabel="@string/note_shortcut_short_label1">

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tint_white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pro3.planner.activities.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        style="@style/settingsLinearMasterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/settingsElementsHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/settingsTextview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/edit_user_profile" />
            <TextView
                style="@style/settingsTextviewSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_profile_description"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            style="@style/settingsDivider"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/settingsLinearMasterLayout"
        android:id="@+id/master_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/settingsElementsHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/settingsTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_master_password" />
            <TextView
                style="@style/settingsTextviewSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/master_password_description"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            style="@style/settingsDivider"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/settingsLinearMasterLayout"
        android:id="@+id/settings_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/settingsElementsHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/settingsTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_categories" />
            <TextView
                style="@style/settingsTextviewSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_categories_description"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            style="@style/settingsDivider"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/settingsLinearMasterLayout"
        android:id="@+id/settings_font_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/settingsElementsHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/settingsTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_font_size" />
            <TextView
                style="@style/settingsTextviewSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_font_size_description"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            style="@style/settingsDivider"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/settingsLinearMasterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/settingsElementsHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/settingsTextview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_title" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            style="@style/settingsDivider"
            />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tint_white"
    android:fillViewport="true"
    android:layout_marginTop="?actionBarSize"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tint_white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.sunilson.firenote.activities.SettingsActivity"
        tools:showIn="@layout/activity_settings">

        <LinearLayout
            style="@style/settingsLinearMasterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/settingsElementsHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/username"
                    style="@style/settingsTextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/change_password"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/settingsDivider"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/master_password"
            style="@style/settingsLinearMasterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/settingsElementsHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/settingsTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/set_master_password" />

                <TextView
                    style="@style/settingsTextviewSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/master_password_description" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/settingsDivider"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            style="@style/settingsLinearMasterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/change_password"
                style="@style/settingsElementsHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/settingsTextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/change_password" />

                <TextView
                    style="@style/settingsTextviewSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password_description" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/settingsDivider"
                android:layout_width="match_parent" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/delete_account"
            style="@style/settingsLinearMasterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/settingsElementsHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/settingsTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_account" />

                <TextView
                    style="@style/settingsTextviewSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_account_description" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/settingsDivider"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about"
            style="@style/settingsLinearMasterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/settingsElementsHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/settingsTextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/about_title" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/settingsDivider"
                android:layout_width="match_parent" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

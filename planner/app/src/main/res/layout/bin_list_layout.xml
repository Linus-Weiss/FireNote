<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:id="@+id/binList_content"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@color/note_color_1"
            android:id="@+id/binList_icon_holder">

            <ImageView
                style="@style/element_List_element"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/binList_icon" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:paddingLeft="@dimen/element_list_text_padding_left"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:layout_marginTop="6dp"
                android:id="@+id/binList_title"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/primary_text_color"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:text="bla" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="top"
                android:id="@+id/binList_category"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:text="bla"
                android:textColor="@color/text_crossed_out" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/binList_actions"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_restore_black_24dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/main_background_color" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:background="@color/defaultElementColor"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        style="@style/element_List_element"
        android:layout_weight="1"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:id="@+id/elementList_icon"
        />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:layout_marginTop="6dp"
            android:id="@+id/elementList_title"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/white_text_color"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:text="bla"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="top"
            android:id="@+id/elementList_category"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:text="bla"
            android:textColor="@color/white_text_color_sub"
            />

    </LinearLayout>

    <TextView
        style="@style/element_List_TextView"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="14sp"
        android:id="@+id/elementList_date"
        android:textColor="@color/white_text_color"
        android:fontFamily="sans-serif" />

</LinearLayout>
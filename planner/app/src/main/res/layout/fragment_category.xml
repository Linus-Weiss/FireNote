<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/fragment_category_listview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/checkAll"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_all_button"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:minHeight="50dp"
            android:src="@drawable/ic_check_box_white_24dp"
            android:textColor="@color/white_text_color" />
        <ImageButton
            android:id="@+id/uncheckAll"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_all_button"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:minHeight="50dp"
            android:src="@drawable/ic_indeterminate_check_box_white_24dp"
            android:text="@string/uncheck_all"
            android:textColor="@color/white_text_color" />
    </LinearLayout>
</LinearLayout>
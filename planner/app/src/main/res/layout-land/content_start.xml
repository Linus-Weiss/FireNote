<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="@dimen/login_activity_horizontal_margin"
    android:paddingRight="@dimen/login_activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/main_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pro3.planner.activities.StartActivity"
    tools:showIn="@layout/activity_start">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/fire"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/startTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/startTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:paddingBottom="50dp"
        android:textColor="@color/title_text_color"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <Button
            android:text="@string/login_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/login_button_drawable"
            android:textColor="@color/tint_white"
            android:id="@+id/go_to_login"
            android:textSize="12sp"
            />

        <Button
            android:text="@string/register_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/register_button_drawable"
            android:textColor="@color/tint_white"
            android:id="@+id/go_to_register"
            android:textSize="12sp"
            />

    </LinearLayout>
</RelativeLayout>
